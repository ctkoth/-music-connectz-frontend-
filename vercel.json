{
  "version": 2,
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "builds": [
    { "src": "*.html", "use": "@vercel/static" },
    { "src": "public/**/*", "use": "@vercel/static" },
    
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/stripe-config.js", "dest": "/public/stripe-config.js" },
    { "src": "/firebase-config.js", "dest": "/public/firebase-config.js" },
    { "src": "/config.js", "dest": "/public/config.js" },
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/public/(.*)", "dest": "/public/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
